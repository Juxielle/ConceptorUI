<Window x:Class="ConceptorUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:component="clr-namespace:ConceptorUI.Views.Component"
        xmlns:propertyPanel="clr-namespace:ConceptorUI.Views.PropertyPanel"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Icon="/Assets/icon2.png"
        StateChanged="OnStateChanged"
        Title="Conceptor UI"
        MinHeight="700"
        MinWidth="1035"
        Height="700"
        Width="1035"
        Background="#d2d2d2">

    <Window.Resources>
        <Style x:Key="LeftScrollViewer"
               TargetType="{x:Type ScrollViewer}">
            <Setter Property="OverridesDefaultStyle"
                    Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Border Grid.Column="1" BorderThickness="0,1,1,1">
                                <Border.BorderBrush>
                                    <SolidColorBrush Color="{DynamicResource BorderMediumColor}" />
                                </Border.BorderBrush>
                                <ScrollContentPresenter CanContentScroll="{TemplateBinding CanContentScroll}" />
                            </Border>
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}" />

                            <ScrollBar x:Name="PART_HorizontalScrollBar"
                                       Orientation="Horizontal"
                                       Grid.Row="1"
                                       Grid.Column="1"
                                       Value="{TemplateBinding HorizontalOffset}"
                                       Maximum="{TemplateBinding ScrollableWidth}"
                                       ViewportSize="{TemplateBinding ViewportWidth}"
                                       Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}" />

                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <LinearGradientBrush x:Key="MenuPopupBrush"
                             EndPoint="0.5,1"
                             StartPoint="0.5,0">
            <GradientStop Color="{DynamicResource ControlLightColor}"
                          Offset="0" />
            <GradientStop Color="{DynamicResource ControlMediumColor}"
                          Offset="0.5" />
            <GradientStop Color="{DynamicResource ControlLightColor}"
                          Offset="1" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ProgressBarIndicatorAnimatedFill"
                             StartPoint="0,0"
                             EndPoint="1,0">
            <LinearGradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="#000000FF"
                                  Offset="0" />
                    <GradientStop Color="#600000FF"
                                  Offset="0.4" />
                    <GradientStop Color="#600000FF"
                                  Offset="0.6" />
                    <GradientStop Color="#000000FF"
                                  Offset="1" />
                </GradientStopCollection>
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>
    </Window.Resources>

    <Grid x:Name="Content" Background="#e4e4e4" PreviewMouseLeftButtonDown="OnMouseLeftButtonDown">
        <DockPanel>
            <!--<component:TopPanel DockPanel.Dock="Top"/>-->

            <component:LeftPanel Margin="0 2"
                                 Background="White"
                                 DockPanel.Dock="Left"
                                 x:Name="ComponentButtons" />

            <component:RightPanel Margin="0 2"
                                  Background="White"
                                  DockPanel.Dock="Right" />

            <component:PanelProperty Width="320"
                                     Margin="0 2"
                                     Background="#d2d2d2"
                                     DockPanel.Dock="Right"
                                     Visibility="Collapsed"
                                     x:Name="RightPanel" />

            <!-- <component:PanelStructuralView Width="320" -->
            <!--                                Margin="0 2" -->
            <!--                                Background="#d2d2d2" -->
            <!--                                DockPanel.Dock="Right" -->
            <!--                                Visibility="Collapsed" -->
            <!--                                x:Name="StructuralView" /> -->

            <propertyPanel:ComponentList Width="320"
                                         Margin="0 2"
                                         Background="#d2d2d2"
                                         DockPanel.Dock="Right"
                                         Visibility="Collapsed"
                                         x:Name="ComponentList" />

            <Grid Margin="0 0 0 2"
                  x:Name="ContentPages"
                  PreviewMouseLeftButtonDown="OnMouseLeftButtonDown">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto"
                              x:Name="Pages"
                              PreviewMouseLeftButtonDown="OnMouseLeftButtonDown">
                    <Grid>
                        <component:PageView Margin="60"
                                            Visibility="Visible"
                                            x:Name="PageView"
                                            HorizontalAlignment="Center"/>

                        <component:ComponentPage HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"
                                                 Margin="60"
                                                 Visibility="Collapsed"
                                                 x:Name="PageComponent" />
                    </Grid>
                </ScrollViewer>

                <StackPanel>
                    <StackPanel Margin="10"
                                Width="50"
                                HorizontalAlignment="Left">
                        <Button Tag="Save"
                                Width="40"
                                Height="40"
                                Cursor="Hand"
                                Click="BtnClick"
                                Background="#e1e1e1"
                                BorderBrush="#666666"
                                BorderThickness="0.4"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="ContentSave"
                                                     Width="30"
                                                     Height="30"
                                                     Foreground="#666666" />
                        </Button>
                        <TextBlock Text="ENREGISTRER"
                                   FontSize="7"
                                   HorizontalAlignment="Center"
                                   Foreground="#000000" />
                    </StackPanel>

                    <StackPanel Margin="10"
                                Width="50"
                                HorizontalAlignment="Left">
                        <Button Background="#e1e1e1"
                                BorderBrush="#8c8c8a"
                                BorderThickness="0.4"
                                Cursor="Hand"
                                Width="40"
                                Height="40"
                                Tag="AddReport"
                                Click="BtnClick"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top">
                            <materialDesign:PackIcon Kind="BookPlusOutline"
                                                     Width="30"
                                                     Height="30"
                                                     Foreground="#666666" />
                        </Button>
                        <TextBlock Text="AJOUTER PAGE"
                                   FontSize="7"
                                   HorizontalAlignment="Center"
                                   Foreground="#000000" />
                    </StackPanel>

                    <StackPanel Margin="10"
                                Width="50"
                                HorizontalAlignment="Left">
                        <Button Background="#e1e1e1"
                                BorderBrush="#8c8c8a"
                                BorderThickness="0.4"
                                Cursor="Hand"
                                Width="40"
                                Height="40"
                                Tag="AddComponent"
                                Click="BtnClick"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top">
                            <materialDesign:PackIcon Kind="ShapeRectanglePlus"
                                                     Width="30"
                                                     Height="30"
                                                     Foreground="#666666" />
                        </Button>
                        <TextBlock Text="AJOUTER COMPOSANT"
                                   FontSize="7"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   Foreground="#000000" />
                    </StackPanel>

                    <StackPanel Margin="10"
                                Width="50"
                                HorizontalAlignment="Left">
                        <Button Background="#e1e1e1"
                                BorderBrush="#8c8c8a"
                                BorderThickness="0.4"
                                Cursor="Hand"
                                Width="40"
                                Height="40"
                                Tag="RefreshComponent"
                                Click="BtnClick"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top">
                            <materialDesign:PackIcon Kind="Refresh"
                                                     Width="30"
                                                     Height="30"
                                                     Foreground="#666666" />
                        </Button>
                        <TextBlock Text="RAFRAICHIR"
                                   FontSize="7"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   Foreground="#000000" />
                    </StackPanel>


                    <StackPanel Margin="10"
                                Width="50"
                                HorizontalAlignment="Left">
                        <Button Background="#e1e1e1"
                                BorderBrush="#8c8c8a"
                                BorderThickness="0.4"
                                Cursor="Hand"
                                Width="40"
                                Height="40"
                                Tag="Trash"
                                Click="BtnClick"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top">
                            <materialDesign:PackIcon Kind="Delete"
                                                     Width="30"
                                                     Height="30"
                                                     Foreground="#666666" />
                        </Button>
                        <TextBlock Text="SUPPRIMER"
                                   FontSize="7"
                                   HorizontalAlignment="Center"
                                   Foreground="#000000" />
                    </StackPanel>
                </StackPanel>

                <component:LeftCompPanel HorizontalAlignment="Left"
                                         Margin="0"
                                         Width="400"
                                         Visibility="Collapsed"
                                         x:Name="CompPage" />
            </Grid>
        </DockPanel>
    </Grid>
</Window>