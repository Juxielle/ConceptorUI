<UserControl x:Class="ConceptorUI.Views.Widgets.CustomComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="300">
    
    <StackPanel>
        <TextBlock Text="Stretch"
                   Foreground="#666666"
                   FontSize="10"
                   FontWeight="Bold"
                   VerticalAlignment="Bottom"/>
        <ComboBox BorderBrush="#666666"
                  BorderThickness="0 0 0 2"
                  Background="Transparent"
                  Foreground="#666666"
                  Height="23"
                  VerticalAlignment="Bottom"
                  Text="0"
                  FontSize="10"
                  FontWeight="Bold"
                  SelectedIndex="0"
                  SelectionChanged="OnSelectedChanged"
                  Tag="Stretch">
            <ComboBoxItem Content="None"/>
            <ComboBoxItem Content="Fill"/>
            <ComboBoxItem Content="Uniform"/>
            <ComboBoxItem Content="UniformToFill"/>
        </ComboBox>
    </StackPanel>
</UserControl>
