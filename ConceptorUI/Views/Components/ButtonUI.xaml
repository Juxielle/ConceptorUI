<UserControl x:Class="ConceptorUI.Views.Components.ButtonUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConceptorUI.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <Border Background="White" CornerRadius="4" BorderBrush="Gray" BorderThickness="1"
            Padding="10" x:Name="btnContent" PreviewMouseDown="BtnMouseDown">
        <TextBlock Text="BUTTON" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="12" x:Name="btnText"/>
    </Border>
</UserControl>
