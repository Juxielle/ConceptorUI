<UserControl x:Class="ConceptorUI.Views.Components.SnackBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ConceptorUI.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    <Border Background="#323232" CornerRadius="6">
        <DockPanel>
            <TextBlock Text="Your photo has been archived" FontSize="25" VerticalAlignment="Center"
                       Foreground="#e8e8e8" Margin="12"/>

            <TextBlock Text="UNDO" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"
                       Foreground="#bb86fb" DockPanel.Dock="Right" Margin="20"/>
            <Grid/>
        </DockPanel>
    </Border>
</UserControl>
