<Window x:Class="UiDesigner.Views.Modals.TextTyping"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        Title="ColorPicker" Height="300" Width="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Grid.Row="1"
                Background="#ffffff"
                BorderBrush="#8c8c8a"
                BorderThickness=".5"
                CornerRadius="4">

            <StackPanel Margin="10">
                <DockPanel Margin="0 0 0 2">
                    <Border Height="22"
                            Width="130"
                            BorderBrush="#8c8c8a"
                            BorderThickness="0.6 0.8"
                            CornerRadius="2"
                            Padding="2 0">
                        <ComboBox
                            IsEditable="True"
                            IsTextSearchEnabled="True"
                            BorderThickness="0"
                            Background="Transparent"
                            Foreground="#8c8c8a"
                            SelectedIndex="0"
                            FontSize="10"
                            FontWeight="Bold"
                            Tag="FontFamily"
                            x:Name="CFontFamily"
                            SelectionChanged="OnSelectedChanged">
                        </ComboBox>
                    </Border>


                    <Border Background="Transparent"
                            BorderBrush="Transparent"
                            Margin="4"
                            Cursor="Hand"
                            Width="20"
                            Height="20"
                            Tag="FontWeight"
                            DockPanel.Dock="Right"
                            x:Name="BFontWeight"
                            MouseLeftButtonDown="BtnMouseDown">
                        <materialDesign:PackIcon Kind="FormatBold"
                                                 Width="15"
                                                 Height="15"
                                                 Foreground="#8c8c8a"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Center"
                                                 x:Name="FontWeight" />
                    </Border>

                    <Border Background="Transparent"
                            BorderBrush="Transparent"
                            Margin="4" Cursor="Hand"
                            Width="20"
                            Height="20"
                            Tag="FontStyle"
                            DockPanel.Dock="Right"
                            x:Name="BFontStyle"
                            MouseLeftButtonDown="BtnMouseDown">
                        <materialDesign:PackIcon Kind="FormatItalic"
                                                 Width="15"
                                                 Height="15"
                                                 Foreground="#8c8c8a"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Center"
                                                 x:Name="FontStyle" />
                    </Border>

                    <Border Background="Transparent"
                            BorderBrush="Transparent"
                            Margin="4"
                            Cursor="Hand"
                            Width="20"
                            Height="20"
                            Tag="TextThrough"
                            DockPanel.Dock="Right"
                            x:Name="BTextThrough"
                            MouseLeftButtonDown="BtnMouseDown">
                        <materialDesign:PackIcon Kind="FormatStrikethrough"
                                                 Width="15"
                                                 Height="15"
                                                 Foreground="#8c8c8a"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Center"
                                                 x:Name="TextThrough" />
                    </Border>

                    <Border Background="Transparent"
                            BorderBrush="Transparent"
                            Margin="4"
                            Cursor="Hand"
                            Width="20"
                            Height="20"
                            Tag="TextOverline"
                            DockPanel.Dock="Right"
                            x:Name="BTextOverline"
                            MouseLeftButtonDown="BtnMouseDown">
                        <materialDesign:PackIcon Kind="FormatOverline"
                                                 Width="15"
                                                 Height="15"
                                                 Foreground="#8c8c8a"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Center"
                                                 x:Name="TextOverline" />
                    </Border>

                    <Border Background="Transparent"
                            BorderBrush="Transparent"
                            Margin="4"
                            Cursor="Hand"
                            Width="20"
                            Height="20"
                            Tag="TextUnderline"
                            DockPanel.Dock="Right"
                            x:Name="BTextUnderline"
                            MouseLeftButtonDown="BtnMouseDown">
                        <materialDesign:PackIcon Kind="FormatUnderline"
                                                 Width="15"
                                                 Height="15"
                                                 Foreground="#8c8c8a"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Center"
                                                 x:Name="TextUnderline" />
                    </Border>

                    <Border Background="Transparent"
                            BorderBrush="Transparent"
                            DockPanel.Dock="Right"
                            Margin="4"
                            Cursor="Hand"
                            Width="20"
                            Height="20"
                            Tag="TextError"
                            x:Name="BTextError"
                            MouseLeftButtonDown="BtnMouseDown">
                        <materialDesign:PackIcon Kind="FormatUnderlineWavy"
                                                 Width="15"
                                                 Height="15"
                                                 Foreground="#8c8c8a"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Center"
                                                 x:Name="TextError" />
                    </Border>
                    <Grid></Grid>
                </DockPanel>

                <Grid>
                    <Border BorderBrush="#8c8c8a"
                            BorderThickness="0.5"
                            CornerRadius="4"
                            Padding="2"
                            Margin="0 0 7 2">
                        <TextBox Text="Text"
                                 Height="100"
                                 AcceptsReturn="True"
                                 BorderBrush="#8c8c8a"
                                 BorderThickness="0"
                                 Foreground="#8c8c8a"
                                 FontSize="12"
                                 Padding="2"
                                 x:Name="TextField"
                                 TextWrapping="Wrap"
                                 HorizontalScrollBarVisibility="Disabled"
                                 VerticalScrollBarVisibility="Auto"
                                 TextChanged="TextChanged" />
                    </Border>

                    <Border Grid.Row="0"
                            Background="#F44336"
                            BorderBrush="#F44336"
                            BorderThickness="0.4"
                            MouseLeftButtonDown="OnMouseDown"
                            Tag="AddText"
                            Margin="-10 0 0 -10"
                            Padding="2"
                            Cursor="Hand"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            CornerRadius="20"
                            ToolTip="Ajouter du texte">
                        <materialDesign:PackIcon Kind="Plus"
                                                 Width="15"
                                                 Height="15"
                                                 Margin="2"
                                                 Foreground="#ffffff" />
                    </Border>
                </Grid>

                <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto"
                              Margin="0 15 -10 0"
                              Padding="0 0 5 0"
                              Height="115">
                    <StackPanel x:Name="TextItems">
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <Border Grid.Column="1"
                Grid.Row="0"
                Background="#ffffff"
                BorderBrush="#F44336"
                BorderThickness="0.4"
                MouseLeftButtonDown="OnMouseDown"
                Tag="Close"
                Margin="-12 0 0 -10"
                Cursor="Hand"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                CornerRadius="10">
            <materialDesign:PackIcon Kind="Close"
                                     Width="15"
                                     Height="15"
                                     Margin="2"
                                     Foreground="#F44336" />
        </Border>
    </Grid>
</Window>