<UserControl x:Class="UiDesigner.Views.Widgets.IconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:binding="clr-namespace:UiDesigner.Binding"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="30">
    
    <UserControl.Resources>
        <binding:BinaryValueConverter x:Key="BinaryValueConverter" />
        
        <Style TargetType="materialDesign:PackIcon">
            <Style.Triggers>
                <Trigger Property="IsMouseCaptured" Value="True">
                    <Setter Property="Foreground"
                            Value="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl},
                            Converter={StaticResource BinaryValueConverter}}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Button Background="Transparent"
            BorderBrush="#8c8c8a"
            Margin="4"
            Cursor="Hand"
            Width="20"
            Height="20"
            x:Name="Button"
            Click="BtnClick">
        <materialDesign:PackIcon Kind="ArrowExpandHorizontal"
                                 Width="15"
                                 Height="15"
                                 Foreground="#8c8c8a"
                                 x:Name="Icon"/>
    </Button>
</UserControl>
