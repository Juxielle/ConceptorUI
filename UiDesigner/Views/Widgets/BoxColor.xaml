<UserControl x:Class="ConceptorUI.Views.Widgets.BoxColor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:modals="clr-namespace:ConceptorUI.Views.Modals"
             xmlns:contextMenus1="clr-namespace:ConceptorUI.Views.ContextMenus"
             mc:Ignorable="d"
             d:DesignHeight="50"
             d:DesignWidth="50">

    <Border Cursor="Hand"
            CornerRadius="1"
            BorderThickness="0.4"
            BorderBrush="Black"
            x:Name="BorderContent"
            PreviewMouseLeftButtonDown="OnClick"
            Background="{Binding Color, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Border.ContextMenu>
            <contextMenus1:CustomContextMenu x:Name="Menu"
                                             Width="321"
                                             Height="260">
                <contextMenus1:CustomContextMenu.Template>
                    <ControlTemplate TargetType="{x:Type contextMenus1:CustomContextMenu}">
                        <Border BorderThickness="0.5"
                                CornerRadius="4"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                Background="White"
                                BorderBrush="Gray">
                            <modals:ColorView Command="{TemplateBinding Command}"
                                              Color="{TemplateBinding Color}" />
                        </Border>
                    </ControlTemplate>
                </contextMenus1:CustomContextMenu.Template>
            </contextMenus1:CustomContextMenu>
        </Border.ContextMenu>
    </Border>
</UserControl>