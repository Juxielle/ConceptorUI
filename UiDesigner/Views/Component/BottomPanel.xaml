<UserControl x:Class="UiDesigner.Views.Component.BottomPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:UiDesigner.Views.Component"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <DockPanel Height="30" Background="Transparent">
        <Border Width="150" BorderBrush="#6739b7" BorderThickness="0 1 2 0" Background="White"
                CornerRadius="8 0 0 0" Cursor="Hand">
            <DockPanel>
                <TextBlock Text="Sheet one" Foreground="#6739b7" FontSize="10" Margin="10"
                       FontWeight="Bold" Grid.ColumnSpan="2" VerticalAlignment="Center"/>
                <Button Background="Transparent" BorderBrush="Transparent"
                        Margin="4" Cursor="Hand" Width="20" Height="20" DockPanel.Dock="Right">
                    <materialDesign:PackIcon Kind="Close" Width="15" Height="15"
                                             Foreground="#6739b7"/>
                </Button>
                <Grid />
            </DockPanel>
        </Border>


        <Border Width="150" BorderBrush="#8c8c8a" BorderThickness="0 1 2 0" Background="White"
                CornerRadius="8 0 0 0" Cursor="Hand">
            <DockPanel>
                <TextBlock Text="Sheet two" Foreground="#8c8c8a" FontSize="10" Margin="10"
                       FontWeight="Bold" Grid.ColumnSpan="2" VerticalAlignment="Center"/>
                <Button Background="Transparent" BorderBrush="Transparent"
                        Margin="4" Cursor="Hand" Width="20" Height="20" DockPanel.Dock="Right">
                    <materialDesign:PackIcon Kind="Close" Width="15" Height="15"
                                             Foreground="#8c8c8a"/>
                </Button>
                <Grid />
            </DockPanel>
        </Border>


        <Border Width="150" BorderBrush="#8c8c8a" BorderThickness="0 1 2 0" Background="White"
                CornerRadius="8 0 0 0" Cursor="Hand">
            <DockPanel>
                <TextBlock Text="Sheet three" Foreground="#8c8c8a" FontSize="10" Margin="10"
                       FontWeight="Bold" Grid.ColumnSpan="2" VerticalAlignment="Center"/>
                <Button Background="Transparent" BorderBrush="Transparent"
                        Margin="4" Cursor="Hand" Width="20" Height="20" DockPanel.Dock="Right">
                    <materialDesign:PackIcon Kind="Close" Width="15" Height="15"
                                             Foreground="#8c8c8a"/>
                </Button>
                <Grid />
            </DockPanel>
        </Border>


        <Border Width="150" BorderBrush="#8c8c8a" BorderThickness="0 1 2 0" Background="White"
                CornerRadius="8 0 0 0" Cursor="Hand">
            <DockPanel>
                <TextBlock Text="Sheet four" Foreground="#8c8c8a" FontSize="10" Margin="10"
                       FontWeight="Bold" Grid.ColumnSpan="2" VerticalAlignment="Center"/>
                <Button Background="Transparent" BorderBrush="Transparent"
                        Margin="4" Cursor="Hand" Width="20" Height="20" DockPanel.Dock="Right">
                    <materialDesign:PackIcon Kind="Close" Width="15" Height="15"
                                             Foreground="#8c8c8a"/>
                </Button>
                <Grid />
            </DockPanel>
        </Border>

        <Border Width="25" BorderBrush="#8c8c8a" BorderThickness="2 0 0 0" DockPanel.Dock="Right"
                Background="White">
            <Button Background="Transparent" BorderBrush="Transparent"
                        Margin="2" Cursor="Hand" Width="20" Height="20" DockPanel.Dock="Right">
                <materialDesign:PackIcon Kind="DotsVertical" Width="15" Height="15"
                                             Foreground="#8c8c8a"/>
            </Button>
        </Border>
        <Grid />
    </DockPanel>
</UserControl>
