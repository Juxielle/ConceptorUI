<UserControl x:Class="UiDesigner.Views.Component.TopPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:UiDesigner.Views.Component"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <DockPanel Background="White" Height="30"
               MouseDown="PnMouseUp" MouseMove="PnMouseMove" MouseLeave="PnMouseDown">
        <Button Background="Transparent" BorderBrush="Transparent" DockPanel.Dock="Right"
                Cursor="Hand" Width="30" HorizontalAlignment="Right" Click="BtnScreenClick" Tag="Close">
            <materialDesign:PackIcon Kind="Close" Width="15" Height="15" Foreground="IndianRed"/>
        </Button>
        <Button Background="Transparent" BorderBrush="Transparent" DockPanel.Dock="Right"
                Cursor="Hand" Width="30" HorizontalAlignment="Right" Click="BtnScreenClick" Tag="Maximize">
            <materialDesign:PackIcon Kind="Maximize" Width="15" Height="15" Foreground="#8c8c8a" x:Name="MaxIcon"/>
        </Button>
        <Button Background="Transparent" BorderBrush="Transparent" DockPanel.Dock="Right"
                Cursor="Hand" Width="30" HorizontalAlignment="Right" Click="BtnScreenClick" Tag="Minimize">
            <materialDesign:PackIcon Kind="Minimize" Width="15" Height="15" Foreground="#8c8c8a"/>
        </Button>
        <Grid/>
    </DockPanel>
</UserControl>
