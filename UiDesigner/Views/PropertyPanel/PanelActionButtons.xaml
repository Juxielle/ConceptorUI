<UserControl x:Class="UiDesigner.Views.PropertyPanel.PanelActionButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:widgets="clr-namespace:UiDesigner.Views.Widgets"
             mc:Ignorable="d"
             d:DesignHeight="50"
             d:DesignWidth="800">

    <Border Background="#f3f3f3"
            BorderBrush="#e4e4e4"
            BorderThickness="0 2 0 2">
        <Grid VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <widgets:MainButton Grid.Column="0"
                                Kind="ContentSave"
                                Content="ENREGISTRER"
                                Margin="10 0" />

            <widgets:MainButton Grid.Column="1"
                                Kind="BookPlusOutline"
                                Content="AJOUTER PAGE"
                                Margin="0 0 10 0" />

            <widgets:MainButton Grid.Column="2"
                                Kind="ShapeRectanglePlus"
                                Content="AJOUTER COMPOSANT"
                                Margin="0 0 10 0" />

            <widgets:MainButton Grid.Column="3"
                                Kind="Refresh"
                                Content="RAFRAICHIR"
                                Margin="0 0 10 0" />

            <widgets:MainButton Grid.Column="4"
                                Kind="FitToScreen"
                                Content="ECRANS"
                                Margin="0 0 10 0" />

            <widgets:MainButton Grid.Column="5"
                                Kind="Delete"
                                Content="SUPPRIMER"
                                Margin="0 0 10 0" />

            <widgets:ZoomButtons Grid.Column="7"
                                 Width="150"
                                 VerticalAlignment="Center" />
        </Grid>
    </Border>
</UserControl>