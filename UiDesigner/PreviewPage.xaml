<Window x:Class="ConceptorUI.PreviewPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:widget="clr-namespace:UiDesigner.Views.Widgets"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/icon2.png"
        Title="Ui Designer"
        MinHeight="700"
        MinWidth="1035"
        Height="700"
        Width="1035">

    <Grid Background="#e1e1e1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Border Background="White"
                Grid.Column="0"
                Padding="5 0"
                BorderBrush="#8c8c8a"
                BorderThickness="0 0 0.5 0">
            <StackPanel Background="White">
                <TextBlock Text="APPLICATIONS RECENTES"
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="#666666"
                           Margin="0 5" />
                <Grid>
                    <TextBox BorderBrush="#8c8c8a"
                             BorderThickness="0.8"
                             Foreground="#000000"
                             Height="30"
                             FontSize="14"
                             Tag="LeftSearch"
                             Text=""
                             Padding="6 4" />
                    <Grid HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Background="White"
                          Margin="2 0"
                          Cursor="Hand">
                        <materialDesign:PackIcon Kind="Search"
                                                 Width="24"
                                                 Height="24"
                                                 Foreground="#c2c2c2" />
                    </Grid>
                </Grid>

                <StackPanel>
                    <Border Height="60"
                            BorderBrush="#c2c2c2"
                            BorderThickness="0 0 0 0.5"
                            Padding="4 0"
                            Cursor="Hand">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="1"
                                       Foreground="#8c8c8a"
                                       VerticalAlignment="Center"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Grid.Column="0"
                                       Grid.RowSpan="2"
                                       HorizontalAlignment="Center" />

                            <materialDesign:PackIcon Kind="FileCsv"
                                                     Width="24"
                                                     Height="24"
                                                     Foreground="#c2c2c2"
                                                     Grid.Column="1"
                                                     Grid.Row="0"
                                                     Grid.RowSpan="2"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center" />

                            <TextBlock Grid.Row="0"
                                       Text="Entity name"
                                       Foreground="#8c8c8a"
                                       VerticalAlignment="Bottom"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Grid.Column="2" />
                            <TextBlock Text="Entity type"
                                       Foreground="#8c8c8a"
                                       VerticalAlignment="Top"
                                       FontSize="10"
                                       Grid.Column="2"
                                       Grid.Row="1" />

                            <TextBlock Grid.Row="0"
                                       Text="Date"
                                       Foreground="#8c8c8a"
                                       VerticalAlignment="Bottom"
                                       HorizontalAlignment="Right"
                                       FontSize="10"
                                       Grid.Column="3"
                                       Margin="5 0" />
                            <TextBlock Text="21 Mai 2023"
                                       Foreground="#8c8c8a"
                                       VerticalAlignment="Top"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Grid.Column="3"
                                       Grid.Row="1"
                                       HorizontalAlignment="Right"
                                       Margin="5 0" />
                        </Grid>
                    </Border>

                    <Border Height="60"
                            BorderBrush="#c2c2c2"
                            BorderThickness="0 0 0 0.5"
                            Background="#f4f6fa"
                            Padding="4 0"
                            Cursor="Hand">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="2"
                                       Foreground="#000000"
                                       VerticalAlignment="Center"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Grid.Column="0"
                                       Grid.RowSpan="2"
                                       HorizontalAlignment="Center" />

                            <materialDesign:PackIcon Grid.Row="0"
                                                     Kind="FileCsv"
                                                     Width="30"
                                                     Height="30"
                                                     Foreground="#1960ea"
                                                     Grid.Column="1" Grid.RowSpan="2"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center" />

                            <TextBlock Grid.Row="0"
                                       Text="Entity name"
                                       Foreground="#000000"
                                       VerticalAlignment="Bottom"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Grid.Column="2" />
                            <TextBlock Text="Entity type"
                                       Foreground="#000000"
                                       VerticalAlignment="Top"
                                       FontSize="10"
                                       Grid.Column="2"
                                       Grid.Row="1" />

                            <TextBlock Grid.Row="0"
                                       Text="Date"
                                       Foreground="#000000"
                                       VerticalAlignment="Bottom"
                                       HorizontalAlignment="Right"
                                       FontSize="10"
                                       Grid.Column="3"
                                       Margin="5 0" />
                            <TextBlock Text="21 Mai 2023"
                                       Foreground="#000000"
                                       VerticalAlignment="Top"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Grid.Column="3"
                                       Grid.Row="1"
                                       HorizontalAlignment="Right"
                                       Margin="5 0" />
                        </Grid>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Margin="10"
              Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Width="220"
                  HorizontalAlignment="Right">
                <TextBox BorderBrush="#8c8c8a"
                         BorderThickness="0.6"
                         Foreground="#000000"
                         Height="30"
                         FontSize="14"
                         Tag="LeftSearch"
                         Text=""
                         Padding="6 4" />
                <Grid HorizontalAlignment="Right"
                      VerticalAlignment="Center"
                      Background="#ffffff"
                      Margin="2 0"
                      Cursor="Hand">
                    <materialDesign:PackIcon Kind="Search"
                                             Width="24"
                                             Height="24"
                                             Foreground="#c2c2c2" />
                </Grid>
            </Grid>
            <Grid Grid.Row="0"
                  HorizontalAlignment="Left"
                  Background="#e1e1e1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border Background="#ffffff"
                        BorderBrush="#1960ea"
                        BorderThickness="0.5"
                        Tag="Add"
                        CornerRadius="4"
                        Cursor="Hand"
                        MouseDown="OnMouseDown"
                        Width="30">
                    <materialDesign:PackIcon Kind="Add"
                                             Width="20"
                                             Height="20"
                                             Foreground="#1960ea"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center" />
                </Border>
                <Border Background="#ffffff"
                        BorderBrush="#1960ea"
                        BorderThickness="0.5"
                        Tag="FolderOpen"
                        CornerRadius="4"
                        Cursor="Hand"
                        MouseDown="OnMouseDown"
                        Width="30"
                        Grid.Column="1"
                        Margin="10 0">
                    <materialDesign:PackIcon Kind="FolderOpen"
                                             Width="20"
                                             Height="20"
                                             Foreground="#1960ea"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center" />
                </Border>
            </Grid>

            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Margin="0 10 0 0">
                <StackPanel>
                    <TextBlock Text="APPLICATIONS LOCALES"
                               FontSize="12"
                               FontWeight="Normal"
                               Foreground="#666666"
                               Margin="0 5" />
                    <StackPanel>
                        <ItemsControl x:Name="LocalApps">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <widget:AppBox Width="280"
                                                   Height="200"
                                                   Tag="{Binding ZipPath}"
                                                   Label="{Binding Name}"
                                                   HorizontalAlignment="Left"
                                                   MouseDoubleClick="OnMouseDownApp"
                                                   ImageSource="/Assets/mobile.png"
                                                   x:Name="ProjectImage"
                                                   Margin="20 20 0 0"
                                                   d:DataContext="{d:DesignInstance }" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>

                    <TextBlock Text="MODELES D'APPLICATIONS EN LIGNE"
                               FontSize="12"
                               FontWeight="Normal"
                               Foreground="#666666"
                               Margin="0 40 0 5" />

                    <StackPanel Margin="0 10">
                        <ItemsControl ItemsSource="{Binding OnLineApps}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="20 20 0 0"
                                                Cursor="Hand">
                                        <Border Width="140"
                                                Height="160"
                                                Background="{Binding Color}"
                                                d:DataContext="{d:DesignInstance }">
                                            <Image Stretch="Uniform"
                                                   x:Name="ProjectImage"
                                                   Source="{Binding Image}" />
                                        </Border>
                                        <TextBlock Text="{Binding Name}"
                                                   Foreground="#000000"
                                                   FontSize="10"
                                                   Margin="0 4"
                                                   Width="135"
                                                   TextTrimming="CharacterEllipsis"
                                                   HorizontalAlignment="Left"
                                                   d:DataContext="{d:DesignInstance }" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <ScrollViewer Width="400"
                      Grid.Column="0"
                      Grid.ColumnSpan="2"
                      VerticalScrollBarVisibility="Auto"
                      x:Name="Form"
                      Visibility="Collapsed"
                      HorizontalAlignment="Right"
                      Background="#e1e1e1">
            <Border BorderBrush="#8c8c8a"
                    BorderThickness="0.5 0 0 0"
                    Padding="10">
                <StackPanel>
                    <TextBlock Text="CREATION DE L'APPLICATION"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="#000000"
                               Margin="0 5" />

                    <StackPanel Margin="0 4">
                        <TextBlock Text="Nom de l'application [*]"
                                   Foreground="#000000"
                                   FontSize="10"
                                   Margin="0 4" />
                        <TextBox BorderBrush="#8c8c8a"
                                 BorderThickness="0.8"
                                 Foreground="#000000"
                                 Height="30"
                                 FontSize="14"
                                 x:Name="TNameApp"
                                 Tag="NameApp"
                                 Text=""
                                 Padding="6 4"
                                 TextChanged="OnTextChanged" />
                    </StackPanel>

                    <StackPanel Margin="0 20 0 0">
                        <TextBlock Text="Version de l'application [*]"
                                   Foreground="#000000"
                                   FontSize="10"
                                   Margin="0 4" />
                        <TextBox BorderBrush="#8c8c8a"
                                 BorderThickness="0.8"
                                 Foreground="#000000"
                                 Height="30"
                                 FontSize="14"
                                 x:Name="TVersion"
                                 Tag="Version"
                                 Padding="6 4"
                                 TextChanged="OnTextChanged" />
                    </StackPanel>

                    <StackPanel Margin="0 20 0 0">
                        <TextBlock Text="Mot de passe [*]"
                                   Foreground="#000000"
                                   FontSize="10"
                                   Margin="0 4" />
                        <Grid>
                            <PasswordBox BorderBrush="#8c8c8a"
                                         BorderThickness="0.8"
                                         Foreground="#000000"
                                         Height="30"
                                         FontSize="14"
                                         x:Name="PbPassword"
                                         Tag="PPassword"
                                         Padding="6 4"
                                         MaxLength="100"
                                         PasswordChanged="OnTextChanged" />
                            <TextBox BorderBrush="#8c8c8a"
                                     BorderThickness="0.8"
                                     Foreground="#000000"
                                     Height="30"
                                     TextChanged="OnTextChanged"
                                     FontSize="14"
                                     x:Name="TbPassword"
                                     Tag="TPassword"
                                     Text=""
                                     Padding="6 4"
                                     Visibility="Collapsed" />
                            <Grid HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Background="White"
                                  Margin="2 0"
                                  Cursor="Hand"
                                  MouseDown="OnMouseDown"
                                  Tag="PASSWORD_EYE">
                                <materialDesign:PackIcon Kind="EyeOffOutline"
                                                         Width="24"
                                                         Height="24"
                                                         Foreground="#c2c2c2"
                                                         x:Name="PVisible" />
                            </Grid>
                        </Grid>
                    </StackPanel>

                    <StackPanel Margin="0 20 0 0">
                        <TextBlock Text="Répéter le mot de passe"
                                   Foreground="#000000"
                                   FontSize="10"
                                   Margin="0 4" />
                        <Grid>
                            <PasswordBox BorderBrush="#8c8c8a"
                                         BorderThickness="0.8"
                                         Foreground="#000000"
                                         Height="30"
                                         Password="ghfhgfjhg"
                                         FontSize="14"
                                         x:Name="PbrPassword"
                                         Tag="PRPassword"
                                         Padding="6 4"
                                         MaxLength="100"
                                         PasswordChanged="OnTextChanged" />
                            <TextBox BorderBrush="#8c8c8a"
                                     BorderThickness="0.8"
                                     Foreground="#000000"
                                     Height="30"
                                     TextChanged="OnTextChanged"
                                     FontSize="14"
                                     x:Name="TbrPassword"
                                     Tag="TRPassword"
                                     Text=""
                                     Padding="6 4"
                                     Visibility="Collapsed" />
                            <Grid HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Background="White"
                                  Margin="2 0"
                                  Cursor="Hand"
                                  MouseDown="OnMouseDown"
                                  Tag="RPASSWORD_EYE">
                                <materialDesign:PackIcon Kind="EyeOffOutline"
                                                         Width="24"
                                                         Height="24"
                                                         Foreground="#c2c2c2"
                                                         x:Name="RpVisible" />
                            </Grid>
                        </Grid>
                    </StackPanel>

                    <StackPanel Margin="0 20 0 0">
                        <TextBlock Text="Image d'aperçu"
                                   Foreground="#000000"
                                   FontSize="10"
                                   Margin="0 4" />
                        <StackPanel HorizontalAlignment="Left"
                                    Orientation="Horizontal">
                            <Border Width="140"
                                    Height="160"
                                    Background="Transparent">
                                <Image Source="/Assets/mobile.png"
                                       Stretch="Uniform"
                                       x:Name="AppImage" />
                            </Border>
                            <Border Background="#f4f6f8"
                                    BorderBrush="#1960ea"
                                    BorderThickness="0.5"
                                    Tag="UploadImage"
                                    CornerRadius="10"
                                    Cursor="Hand"
                                    Width="50"
                                    Height="50"
                                    VerticalAlignment="Center"
                                    Margin="40 0"
                                    MouseDown="OnMouseDown">
                                <materialDesign:PackIcon Kind="ImageAdd"
                                                         Width="30"
                                                         Height="30"
                                                         Foreground="#1960ea"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center" />
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="ID de l'application"
                               Foreground="#000000"
                               FontSize="10"
                               Margin="0 20 0 4" />
                    <TextBlock Text="{Binding DataDetails.ID}"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="#000000"
                               x:Name="IdApp" />

                    <TextBlock Text="Date de création"
                               Foreground="#000000"
                               FontSize="10"
                               Margin="0 20 0 4" />
                    <TextBlock Text="{Binding DataDetails.Created}"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="#000000"
                               x:Name="CreatedDate" />

                    <TextBlock Text="Date de mise à jour"
                               Foreground="#000000"
                               FontSize="10"
                               Margin="0 20 0 4" />
                    <TextBlock Text="{Binding DataDetails.Updated}"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="#000000"
                               x:Name="UpdatedDate" />

                    <TextBlock Text="Dernière date d'ouverture"
                               Foreground="#000000"
                               FontSize="10"
                               Margin="0 20 0 4" />
                    <TextBlock Text="{Binding DataDetails.Updated}"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="#000000" />

                    <Grid Margin="0 20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button Content="FERMER"
                                Height="34"
                                Margin="0 0 5 0"
                                FontSize="12"
                                Foreground="IndianRed"
                                Background="Transparent"
                                BorderBrush="IndianRed"
                                Cursor="Hand" Click="OnClick"
                                Tag="Close" />
                        <Button Content="CREER LE PROJET"
                                Height="34"
                                Margin="5 0 0 0"
                                FontSize="12"
                                Foreground="#1960ea"
                                x:Name="BCreate"
                                Background="Transparent"
                                BorderBrush="#1960ea"
                                Grid.Column="1"
                                Cursor="Hand"
                                Click="OnClick"
                                Tag="Create" />
                    </Grid>

                    <StackPanel VerticalAlignment="Center"
                                Margin="0 0 0 20"
                                Visibility="Collapsed">
                        <TextBlock Text="Chargement..."
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Margin="5"
                                   HorizontalAlignment="Center" />
                        <Border Background="Gray"
                                Opacity="0.6"
                                Height="20">
                            <Border Background="Green"
                                    Width="50"
                                    HorizontalAlignment="Left" />
                        </Border>
                        <TextBlock Text="Création de la structure du projet..."
                                   FontSize="10"
                                   Margin="0 10 0 0"
                                   HorizontalAlignment="Center"
                                   x:Name="TMessage" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>